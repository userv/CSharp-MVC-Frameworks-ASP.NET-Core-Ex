@model PANDA.ViewModels.PackageCreateInputModel
@{
    ViewData["Title"] = "Create";
    var recipients = Model.Recipients.Select(x=> new SelectListItem(x.FullName,x.Id));
}

<h1 class="text-center">Create Package</h1>
<hr class="hr-2 bg-panda w-50">
<div class="d-flex">
    <form asp-action="Create" class="w-50 mx-auto">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-group w-50 pr-5">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group w-50 pl-5">
                <label asp-for="ShippingAddress" class="control-label"></label>
                <input asp-for="ShippingAddress" class="form-control" />
                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
            </div>
        </div>
        <hr class="hr-2 bg-panda">
        <div class="form-group w-50 mx-auto">
            <div class="text-center">
                <label asp-for="RecipientId" class="control-label"></label>
            </div>
            <select asp-for="RecipientId" class="form-control" asp-items="recipients">
                <option selected disabled>-- Choose Recipient --</option>
            </select>
        </div>
        <hr class="hr-2 bg-panda">
        <div class="form-group d-flex justify-content-center">
            <input type="submit" value="Create" class="btn bg-panda text-white" />
        </div>
    </form>
</div>

