@model PANDA.ViewModels.ReceiptDetailsViewModel
@{
    ViewData["Delivered"] = "Receipt Details";
}


<h1 class="text-center">Receipt Details</h1>
<hr class="hr-2 bg-panda">
<div class="mx-auto">
    <div class="d-flex justify-content-between">
        <h3>Receipt Number:</h3>
        <h3>@Model.Id</h3>
    </div>
    <hr class="hr-2 bg-panda">
    <div class="d-flex justify-content-between">
        <h4>Issued On:</h4>
        <h4>@Model.IssuedOn.ToString("MM/dd/yyyy")</h4>
    </div>
    <div class="d-flex justify-content-between">
        <h4>Delivery Address:</h4>
        <h4>@Model.ShippingAddress</h4>
    </div>
    <hr class="hr-2 bg-panda">
    <div class="d-flex justify-content-between">
        <h4>Package Weight (KG):</h4>
        <h4>@Model.Package.Weight.ToString("F2")</h4>
    </div>
    <div class="d-flex justify-content-between">
        <h4>Package Description:</h4>
        <h4>@Model.Package.Description</h4>
    </div>
    <div class="d-flex justify-content-between">
        <h4>Recipient:</h4>
        <h4>@Model.Recipient.UserName</h4>
    </div>
    <hr class="hr-2 bg-panda">
    <div class="d-flex justify-content-end">
        <h3>Total: $@Model.Fee.ToString("F2")</h3>
    </div>
</div>